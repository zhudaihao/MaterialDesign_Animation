<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lyl.animationtest"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".one.TransitionActivity1"
            android:theme="@style/MaterialAnimations.Red">
        </activity>
        <activity
            android:name=".one.TransitionActivity2"
            android:theme="@style/MaterialAnimations.Red">
        </activity>
        <activity
            android:name=".one.TransitionActivity3"
            android:theme="@style/MaterialAnimations.Red">
        </activity>
        <activity
            android:name=".two.SharedElementActivity"
            android:theme="@style/MaterialAnimations.Blue">
        </activity>
        <activity
            android:name=".three.AnimationsActivity1"
            android:theme="@style/MaterialAnimations.Green">
        </activity>
        <activity android:name=".three.AnimationsActivity2"/>
        <activity
            android:name=".four.RevealActivity"
            android:theme="@style/MaterialAnimations.Yellow">
        </activity>
    </application>

</manifest>